{
  "dxt_version": "0.2",
  "name": "@nuntly/sdk-mcp",
  "version": "0.10.1",
  "description": "The official MCP Server for the Nuntly API",
  "author": {
    "name": "Nuntly",
    "email": "developers@nuntly.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuntly/nuntly-sdk-typescript.git"
  },
  "homepage": "https://github.com/nuntly/nuntly-sdk-typescript/tree/main/packages/mcp-server#readme",
  "documentation": "http://developers.nuntly.com",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "NUNTLY_API_KEY": "${user_config.NUNTLY_API_KEY}"
      }
    }
  },
  "user_config": {
    "NUNTLY_API_KEY": {
      "title": "api_key",
      "description": "API key to authenticate requests",
      "required": false,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
